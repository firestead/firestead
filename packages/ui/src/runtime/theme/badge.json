{
    "base": {
        "badge": "inline-flex items-center"
    },
    "defaults": {
        "badge": "bg-{color}-500 dark:bg-{color}-400 text-white dark:text-gray-900"
    },
    "variants": {
        "outline": {
            "badge": "text-{color}-500 dark:text-{color}-400 ring-1 ring-inset ring-{color}-500 dark:ring-{color}-400"
        },
        "soft": {
            "badge": "bg-{color}-50 dark:bg-{color}-400 dark:bg-opacity-10 text-{color}-500 dark:text-{color}-400"
        },
        "subtle": {
            "badge": "bg-{color}-50 dark:bg-{color}-400 dark:bg-opacity-10 text-{color}-500 dark:text-{color}-400 ring-1 ring-inset ring-{color}-500 dark:ring-{color}-400 ring-opacity-25 dark:ring-opacity-25"
        }
    },
    "options": {
        "size": {
            "xs": "text-xs px-1.5 py-0.5",
            "sm": "text-xs px-2 py-1",
            "md": "text-sm px-2 py-1",
            "lg": "text-sm px-2.5 py-1.5"
        },
        "rounded": {
            "none": "",
            "2xs": "rounded-2xs",
            "xs": "rounded-xs",
            "sm": "rounded-sm",
            "md": "rounded-md",
            "lg": "rounded-lg",
            "xl": "rounded-xl"
        }
    },
    "presets": {
        "size": "md",
        "rounded": "md",
        "color": "primary"
    }
}